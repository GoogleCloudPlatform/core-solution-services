{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, // Important: This prevents TypeScript from emitting .js files
    "jsx": "react-jsx",
    "types": ["jest", "node"],
    "baseUrl": "src", // Use the src folder as the base directory for imports
    "paths": {
      "@/": [""] // Corrected paths alias to match standard practice
    },
  },
  "include": ["src"], // Only include the source code directory for building
  "exclude": ["node_modules", "tests"], // Exclude node_modules and the tests directory
  "references": [{ "path": "./tsconfig.node.json" }]
}